<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/aqi_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:background="@color/forecast"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气质量"
            android:textColor="@color/basic"
            android:textSize="24sp"
            />

    </LinearLayout>

    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--空气质量指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/air"
                style="@style/ForecastStyle"
                android:text="空气质量指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/air_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/air"
                android:text="良"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
        <!--AQI指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/aqi"
                style="@style/ForecastStyle"
                android:text="AQI指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/aqi_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/aqi"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--CO指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/co"
                style="@style/ForecastStyle"
                android:text="CO指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/co_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/co"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
        <!--NO2指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/no2"
                style="@style/ForecastStyle"
                android:text="NO2指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/no2_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/no2"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--O3指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/o3"
                style="@style/ForecastStyle"
                android:text="O3指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/o3_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/o3"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
        <!--SO2指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/so2"
                style="@style/ForecastStyle"
                android:text="SO2指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/so2_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/so2"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--PM10指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pm10"
                style="@style/ForecastStyle"
                android:text="PM10指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pm10_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/pm10"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
        <!--PM2.5指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pm25"
                style="@style/ForecastStyle"
                android:text="PM2.5指数"
                android:textColor="@color/basic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pm25_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/pm25"
                android:text="66"
                android:textColor="@color/basic"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
