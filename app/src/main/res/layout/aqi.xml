<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#7000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气质量"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--空气质量指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/air"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="空气质量指数"/>
            <TextView
                android:id="@+id/air_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/air"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="良"/>
        </RelativeLayout>
        <!--AQI指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/aqi"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="AQI指数"/>
            <TextView
                android:id="@+id/aqi_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/aqi"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--CO指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/co"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="CO指数"/>
            <TextView
                android:id="@+id/co_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/co"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
        <!--NO2指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/no2"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="NO2指数"/>
            <TextView
                android:id="@+id/no2_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/no2"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--O3指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/o3"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="O3指数"/>
            <TextView
                android:id="@+id/o3_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/o3"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
        <!--SO2指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/so2"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="SO2指数"/>
            <TextView
                android:id="@+id/so2_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/so2"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--PM10指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/pm10"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="PM10指数"/>
            <TextView
                android:id="@+id/pm10_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/pm10"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
        <!--PM2.5指数-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/pm25"
                style="@style/ForecastStyle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="PM2.5指数"/>
            <TextView
                android:id="@+id/pm25_text"
                style="@style/ForecastStyle"
                android:layout_below="@id/pm25"
                android:textColor="#FFF300"
                android:textSize="14sp"
                android:text="66"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
