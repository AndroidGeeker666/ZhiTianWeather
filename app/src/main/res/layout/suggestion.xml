<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggestion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/forecast"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活建议"
            android:textColor="@color/basic"
            android:textSize="24sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--空气污染指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/air_dirty_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="空气污染指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/air_dirty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="中度"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/air_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--舒适度染指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comfort_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="舒适度指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/comfort_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="较舒适"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/comfort_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       白天天气晴好，同时较大的空气湿度，会使您在午后略感闷热，但早晚仍很凉爽、舒适。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--洗车指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/car_wash_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="洗车指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/car_wash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="较适宜"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/car_wash_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       较适宜洗车，未来一天无雨，风力较小，擦洗一新的汽车至少能保持一天。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--穿衣指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dressing_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="穿衣指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dressing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="舒适"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/dressing_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       建议着长袖T恤、衬衫加单裤等服装。年老体弱者宜着针织长袖衬衫、马甲和长裤。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--感冒指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/influenza_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="感冒指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/influenza_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="少发"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/influenza_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       各项气象条件适宜，无明显降温过程，发生感冒机率较低。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--运动指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sport_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="运动指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/sport_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="较适宜"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/sport_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       天气较好，但因风力稍强，户外可选择对风力要求不高的运动，推荐您进行室内运动。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--旅行指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/travel_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="旅行指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/travel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="适宜"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/travel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       天气较好，风稍大，但温度适宜，是个好天气哦。适宜旅游，您可以尽情地享受大自然的无限风光。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View style="@style/LineStyle"/>
    <!--紫外线指数-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ultravioletRay_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="紫外线指数"
            android:textColor="@color/basic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ultraviolet_suggestion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="强"
            android:textColor="@color/basic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/ultraviolet_suggestion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       紫外线辐射强，建议涂擦SPF20左右、PA++的防晒护肤品。避免在10点至14点暴露于日光下。"
            android:textColor="@color/basic"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>
